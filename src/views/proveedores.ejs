<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('partials/_head', { pageTitle: pageTitle }) %>
</head>
<body>
    <div class="layout">
          <%- include('partials/_sidebarGlobal', { user: user, activeMenu: activeMenu }) %>
        <div class="main-content">
            <%- include('partials/_navbar', { user: user }) %>
            <div class="content-wrapper p-3">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h1 class="h4 mb-3">Proveedores</h1>
                    <button class="btn btn-sm btn-neo-agregar" data-bs-toggle="modal" data-bs-target="#modalAgregarProveedor">
                        <i class="bi bi-plus-circle me-1"></i> Nuevo Proveedor
                    </button>
                </div>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped table-sm" id="tablaProvedoresNeoPOS">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nombre/Razón Social</th>
                                        <th>Tipo Doc.</th> 
                                        <th>Documento</th>
                                        <th>Teléfono</th>
                                        <th>Email</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (proveedores && proveedores.length > 0) { %>
                                        <% proveedores.forEach(function(prov, index) { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= prov.nombre_razon_social %></td>
                                                <td><%= prov.tipo_documento_identidad %></td> 
                                                <td><%= prov.numero_documento_identidad %></td>
                                                <td><%= prov.telefono_contacto %></td>
                                                <td><%= prov.email %></td>
                                                <td class="text-center">
                                                <!-- Botón Editar -->
                                                <button class="btn btn-sm btn-outline-primary me-1" title="Editar"
                                                    data-id="<%= prov.id_tercero %>"
                                                    onclick="abrirModalEditarProveedor(<%= prov.id_tercero %>)">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>

                                                <% if (Number(prov.activo) === 1) { %>
                                                    <!-- Botón Desactivar -->
                                                    <button class="btn btn-sm btn-neopos-desactivar" title="Desactivar"
                                                        data-id="<%= prov.id_tercero %>"
                                                        data-accion="false"
                                                        data-nombre="<%- prov.nombre_razon_social.replace(/"/g, '&quot;') %>"
                                                        onclick="cambiarEstadoProveedorDesdeBoton(this)">
                                                        <i class="bi bi-eye-slash"></i> Desactivar
                                                    </button>
                                                <% } else { %>
                                                    <!-- Botón Activar -->
                                                    <button class="btn btn-sm btn-neopos-activar" title="Activar"
                                                        data-id="<%= prov.id_tercero %>"
                                                        data-accion="true"
                                                        data-nombre="<%- prov.nombre_razon_social.replace(/"/g, '&quot;') %>"
                                                        onclick="cambiarEstadoProveedorDesdeBoton(this)">
                                                        <i class="bi bi-eye"></i> Activar
                                                    </button>
                                                <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center py-4">No hay proveedores para mostrar.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Agregar Proveedor -->
    <div class="modal fade" id="modalAgregarProveedor" tabindex="-1" aria-labelledby="modalAgregarProveedorLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="formAgregarProveedor" method="POST" action="/proveedores/agregar">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalAgregarProveedorLabel">Agregar Proveedor</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="nombre_razon_social" class="form-label">Nombre/Razón Social</label>
                            <input type="text" class="form-control" id="nombre_razon_social" name="nombre_razon_social" required>
                        </div>
                        <div class="mb-3">
                            <label for="tipo_documento_identidad" class="form-label">Tipo de Documento</label>
                            <select class="form-select" id="tipo_documento_identidad" name="tipo_documento_identidad" required>
                                <option value="">Seleccione...</option>
                                <option value="CC">CC</option>
                                <option value="NIT">NIT</option>
                                <option value="RUT">RUT</option>
                                <option value="NUIP">NUIP</option>
                                <option value="CE">CE</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="numero_documento_identidad" class="form-label">Documento</label>
                            <input type="text" class="form-control" id="numero_documento_identidad" name="numero_documento_identidad" required>
                        </div>
                        <div class="mb-3">
                            <label for="direccion" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="direccion" name="direccion">
                        </div>
                        <div class="mb-3">
                            <label for="telefono_contacto" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="telefono_contacto" name="telefono_contacto">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-neo-agregar">Agregar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Editar Proveedor -->
    <div class="modal fade" id="modalEditarProveedor" tabindex="-1" aria-labelledby="modalEditarProveedorLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="formEditarProveedor" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalEditarProveedorLabel">Editar Proveedor</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="editar_id_tercero" name="id_tercero">
                        <div class="mb-3">
                            <label for="editar_nombre_razon_social" class="form-label">Nombre/Razón Social</label>
                            <input type="text" class="form-control" id="editar_nombre_razon_social" name="nombre_razon_social" required>
                        </div>
                        <div class="mb-3">
                            <label for="editar_tipo_documento_identidad" class="form-label">Tipo de Documento</label>
                            <select class="form-select" id="editar_tipo_documento_identidad" name="tipo_documento_identidad" required>
                                <option value="">Seleccione...</option>
                                <option value="CC">CC</option>
                                <option value="NIT">NIT</option>
                                <option value="RUT">RUT</option>
                                <option value="NUIP">NUIP</option>
                                <option value="CE">CE</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="editar_numero_documento_identidad" class="form-label">Documento</label>
                            <input type="text" class="form-control" id="editar_numero_documento_identidad" name="numero_documento_identidad" required>
                        </div>
                        <div class="mb-3">
                            <label for="editar_direccion" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="editar_direccion" name="direccion">
                        </div>
                        <div class="mb-3">
                            <label for="editar_telefono_contacto" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="editar_telefono_contacto" name="telefono_contacto">
                        </div>
                        <div class="mb-3">
                            <label for="editar_email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="editar_email" name="email">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-neo-agregar">Guardar Cambios</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Confirmar Estado Proveedor -->
    <div class="modal fade" id="modalConfirmarEstadoProveedor" tabindex="-1" aria-labelledby="modalConfirmarEstadoProveedorLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalConfirmarEstadoProveedorLabel">Confirmar acción</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div class="modal-body" id="textoConfirmarEstadoProveedor"></div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary" id="btnConfirmarEstadoProveedor">Aceptar</button>
          </div>
        </div>
      </div>
    </div>
    <form id="formCambiarEstadoProveedor" method="POST" style="display: none"></form>
    <%- include('partials/_scripts') %>
    <script>
        window.proveedoresData = <%- JSON.stringify(proveedores) %>;
    </script>
</body>
</html>